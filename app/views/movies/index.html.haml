-#  This file is app/views/movies/index.html.haml
%h1 All Movies

=form_tag movies_path, :method => :get, :id => "ratings_form" do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]",1,@checked[rating], :id=> "ratings_#{rating}"
  = submit_tag 'Refresh',  {:id => "ratings_submit"}



%table#movies
  %thead
    %tr
      %th{:id => "title_header",:class =>@title_class_clicked}=link_to 'Movie title', movies_path(:title_click =>"yes")
      %th Rating
      %th{:id => "release_date_header",:class => @release_date_class_clicked}=link_to 'Release Date', movies_path(:release_date_click =>"yes")
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
